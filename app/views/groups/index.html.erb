<div class="col-lg-12">
  <%= link_to 'New Group', new_group_path, class: "pull-right" %>
  <% if @active_groups.present? || @inactive_groups.present? %>
    <table class="table table-striped">
      <h3>Active Group</h3>
      <thead>
        <tr>
          <th>Name</th>
          <th>Status</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @active_groups.each do |group| %>
          <tr>
            <td><%= link_to "#{group.name}", group %></td>
            <td><%= group_status(group.status) %></td>
            <td><%= link_to 'Edit', edit_group_path(group) %></td>
            <td><%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <td><%= link_to 'Inactive', group_update_status_path(group_id: group.id, status: false) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <table class="table table-striped">
      <h3>Inactive Group</h3>
      <thead>
        <tr>
          <th>Name</th>
          <th>Status</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @inactive_groups.each do |group| %>
          <tr>
            <td><%= link_to "#{group.name}", group %></td>
            <td><%= group_status(group.status) %></td>
            <td><%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <td><%= link_to 'Active', group_update_status_path(group_id: group.id, status: true) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  <% else%>
    <h3>Data Not Found</h3>
  <% end%>
</div>