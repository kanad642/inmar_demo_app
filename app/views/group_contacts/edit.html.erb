<div class="col-lg-2"></div>
<div class="col-lg-8 inner-box ">
  <div class="center-h3">Edit Contact</div>
	<%= form_for(@group_contact) do |f| %>
	  <% if @group_contact.errors.any? %>
	    <div id="error_explanation">
	      <ul>
	      <% @group_contact.errors.full_messages.each do |message| %>
	        <li><%= message %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>

	  <div class="form-group">
	    <%= f.label :name %>
	    <%= f.text_field :name, class: 'form-control', required: 'required' %>
	  </div>

	  <div class="form-group">
	    <%= f.label :email %>
	    <%= f.text_field :email, class: 'form-control', required: 'required' %>
	  </div>

	  <div class="form-group">
	    <%= f.label :phone %>
	    <%= f.number_field :phone, class: 'form-control', required: 'required' %>
	  </div>
	  <div class="actions form-group">
	    <%= f.submit "Submit", class: "btn btn-primary" %>
	    <%= link_to 'Back', groups_path, class: "btn btn-primary" %>
	  </div>
	<% end %>
</div>
<div class="col-lg-2"></div>

